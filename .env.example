# Environment variables for the microservices stack
# Copy this file to .env and customize for your environment

# JWT Configuration for User Authentication Service
JWT_SECRET_KEY=your-super-secret-jwt-key-change-in-production-minimum-32-characters
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# Database Configuration
DATABASE_URL=sqlite:///./users.db

# API Gateway Configuration
USER_AUTH_SERVICE_URL=http://user-auth-service:8000
GATEWAY_PORT=8000
LOG_LEVEL=INFO

# Kafka Configuration
KAFKA_BOOTSTRAP_SERVERS=kafka:29092

# MQTT Configuration
MQTT_BROKER_URL=mqtt://mqtt-broker:1883

# Development Settings (set to true for development)
DEBUG=false

# Security Note:
# In production, make sure to:
# 1. Generate a strong, random JWT secret key (minimum 32 characters)
# 2. Use a proper database instead of SQLite
# 3. Set DEBUG=false
# 4. Use environment-specific secrets management
